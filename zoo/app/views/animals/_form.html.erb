<%= form_for @animal do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :species %>
  <%= f.text_field :species %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label "Favorite food" %>
  <%= f.text_field :fav_food %>

  <%= f.label "Image URL" %>
  <%= f.text_field :image_src %>

  <%# image_tag "#{@animal.image_src}", alt: "#{@animal.species} image" %>

